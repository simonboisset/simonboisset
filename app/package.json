{
  "private": true,
  "sideEffects": false,
  "scripts": {
    "build": "tailwindcss -o ./app/styles/tailwind.css && remix build",
    "deploy": "wrangler publish",
    "dev:remix": "remix watch",
    "dev:ts": "tsc --noEmit --watch",
    "dev:css": "tailwindcss -o ./app/styles/tailwind.css --watch",
    "dev:miniflare": "cross-env NODE_ENV=development miniflare ./build/index.js --watch",
    "dev": "yarn build && run-p \"dev:*\"",
    "start": "cross-env NODE_ENV=production miniflare ./build/index.js"
  },
  "dependencies": {
    "@headlessui/react": "^1.6.5",
    "@popperjs/core": "^2.11.5",
    "@ts-v/kit": "^0.2.2",
    "@ts-v/remix": "^0.2.2",
    "dayjs": "^1.11.3",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "@remix-run/cloudflare": "^1.7.0",
    "@remix-run/cloudflare-workers": "^1.7.0",
    "@remix-run/react": "^1.7.0",
    "cross-env": "^7.0.3"
  },
  "devDependencies": {
    "@swc/core": "^1.2.204",
    "@swc/jest": "^0.2.21",
    "@types/jest": "^28.1.3",
    "jest": "^28.1.1",
    "remix-flat-routes": "^0.4.3",
    "tailwindcss": "^3.1.4",
    "ts-node": "^10.8.1",
    "@cloudflare/workers-types": "^3.14.1",
    "@remix-run/dev": "^1.7.0",
    "@remix-run/eslint-config": "^1.7.0",
    "@types/react": "^17.0.47",
    "@types/react-dom": "^17.0.17",
    "eslint": "^8.20.0",
    "miniflare": "^2.6.0",
    "npm-run-all": "^4.1.5",
    "typescript": "^4.7.4",
    "wrangler": "^2.0.22"
  },
  "engines": {
    "node": ">=16.13"
  }
}
